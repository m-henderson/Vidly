@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<a class="btn btn-primary" href="/Movies/New">New Movie</a>
@if (!Model.Any())
{
    <div class="row">
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>No Way!</strong> We dont have any customers, you should <a href="#" class="alert-link">sign up</a>.
        </div>
    </div>
}
else
{

    <table id="movies" class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <th>@Html.ActionLink(@movie.Name, "Edit", "Movies", new { id = @movie.Id }, null)</th>
                    <th>@movie.Genres.Name</th>
                </tr>
            }
        </tbody>
    </table>

}
@section scripts
{
    <script>
        
    </script>
}