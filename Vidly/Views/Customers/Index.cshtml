@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (!Model.Any())
    {
    <div class="row">
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>No Way!</strong> We dont have any customers, you should <a href="#" class="alert-link">sign up</a>.
        </div>
    </div>
    }
else
{

    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Customer Id</th>
                <th>Customer Name</th>
                <th>Membership Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <th>@customer.Id</th>
                    <th>@Html.ActionLink(@customer.Name, "Edit", "Customers", new { id = @customer.Id }, null)</th>
                    <th>@customer.MembershipType.Name</th>
                </tr>
            }
        </tbody>
    </table>

}
  


