@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (!Model.Any())
    {
    <div class="row">
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>No Way!</strong> We dont have any customers, you should <a href="#" class="alert-link">sign up</a>.
        </div>
    </div>
    }
else
{

    <table class="table table-striped table-hover " id="customers">
        <thead>
            <tr>
                <th>Customer Id</th>
                <th>Customer Name</th>
                <th>Membership Type</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@Html.ActionLink(@customer.Name, "Edit", "Customers", new { id = @customer.Id }, null)</td>
                    <td>@customer.MembershipType.Name</td>
                    <td>
                        <button data-customer-id="@customer.Id" class="btn-link js-delete">Delete</button>
                    </td>

                </tr>
            }
        </tbody>
    </table>

}
  
@section scripts
{
    <script>
        $(document).ready(function() {
            $("#customers .js-delete").on("click", function () {
                var button = $(this);

                if (confirm("Are you sure you wnat to delete this customer?"));
                $.ajax({
                    url: "/api/customers/" + button.attr("data-customer-id"),
                    method: "DELETE",
                    success: function() {
                        button.parents("tr").remove();
                    }
                });
            });
        });
    </script>    
}

