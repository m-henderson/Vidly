@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

  <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <th>@customer.Id</th>
                    <th>@Html.ActionLink(@customer.Name, "Details", "Customers", new { id = @customer.Id }, null)</th>
                </tr>
            }
        </tbody>
   </table>



